<%= form_with(model: post, local: true) do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>
  
    <div>
      <%= form.label :content %><br>
      <%= form.text_area :content %>
    </div>
  
    <div>
    <%= form.submit post.persisted? ? "Update Post" : "Create Post" %>
    </div>
<% end %>