<header>
  <% if logged_in? %>
    Hello, <%= current_user.username %> |
    <% if current_user.profile.present? %>
      <%= link_to "Profile", profile_path(current_user.profile) %> |
    <% else %>
      <%= link_to "Create Profile", new_profile_path %> |
    <% end %>

    <%= link_to "New Post", new_post_path %> |
    <div class="logout-inline">
      <%= button_to "Logout", logout_path, method: :delete, class: "logout-button" %>
    </div>
  <% else %>
    <%= link_to "Register", new_user_path %> |
    <%= link_to "Login", login_path %> |
    <%= link_to "Main Page", posts_path%>
  <% end %>
  <br>

</header>
